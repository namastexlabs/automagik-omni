{
	"name": "automagik-omni",
	"version": "0.5.2",
	"type": "module",
	"workspaces": [
		"gateway",
		"resources/ui"
	],
	"scripts": {
		"dev": "NODE_ENV=development tsx gateway/src/index.ts --dev",
		"start": "node gateway/dist/index.js",
		"build": "npm run build -w gateway && npm run build -w resources/ui",
		"build:gateway": "npm run build -w gateway",
		"build:ui": "npm run build -w resources/ui",
		"gateway:dev": "npm run dev -w gateway"
	},
	"devDependencies": {
		"@playwright/test": "^1.56.1",
		"tsx": "^4.19.2"
	},
	"dependencies": {
		"@electric-sql/pglite": "^0.3.14",
		"forge-inspector": "^0.0.6",
		"pglite-prisma-adapter": "^0.6.1",
		"playwright": "^1.56.1"
	}
}
