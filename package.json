{
	"name": "@automagik/omni",
	"version": "0.6.0",
	"description": "Multi-channel messaging hub with WhatsApp, Discord support. Single-port gateway with embedded Python backend.",
	"type": "module",
	"workspaces": [
		"gateway",
		"resources/ui"
	],
	"bin": {
		"omni": "./bin/omni.js",
		"automagik-omni": "./bin/omni.js"
	},
	"main": "./gateway/dist/index.js",
	"types": "./gateway/dist/index.d.ts",
	"exports": {
		".": "./gateway/dist/index.js",
		"./package.json": "./package.json"
	},
	"files": [
		"bin",
		"gateway/dist",
		".bundled",
		"resources/ui/dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "NODE_ENV=development tsx gateway/src/index.ts --dev",
		"start": "node gateway/dist/index.js",
		"build": "pnpm build:gateway && pnpm build:ui && pnpm bundle:python",
		"build:gateway": "pnpm --filter gateway build",
		"build:ui": "pnpm --filter resources/ui build",
		"bundle:python": "./scripts/bundle-python.sh",
		"gateway:dev": "pnpm --filter gateway dev",
		"prepublishOnly": "pnpm build"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"os": [
		"darwin",
		"linux",
		"win32"
	],
	"cpu": [
		"x64",
		"arm64"
	],
	"keywords": [
		"messaging",
		"whatsapp",
		"discord",
		"omnichannel",
		"chatbot",
		"automation",
		"api"
	],
	"devDependencies": {
		"@playwright/test": "^1.56.1",
		"tsx": "^4.19.2"
	},
	"dependencies": {
		"@electric-sql/pglite": "^0.3.14",
		"forge-inspector": "^0.0.6",
		"pglite-prisma-adapter": "^0.6.1",
		"playwright": "^1.56.1"
	}
}
