#!/bin/bash
# Pre-push hook to run comprehensive checks before pushing

echo "üöÄ Running pre-push checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Get the branch being pushed
BRANCH=$(git rev-parse --abbrev-ref HEAD)
echo -e "${BLUE}Pushing to branch: $BRANCH${NC}"

# Run tests
echo "üß™ Running tests..."
if ! make test 2>/dev/null; then
    echo -e "${RED}‚ùå Tests failed!${NC}"
    echo -e "${YELLOW}Fix failing tests before pushing${NC}"
    exit 1
fi

# Run linting one more time
echo "üîç Final lint check..."
if ! make lint 2>/dev/null; then
    echo -e "${RED}‚ùå Linting issues found!${NC}"
    echo -e "${YELLOW}Run 'make lint-fix' to fix issues${NC}"
    exit 1
fi

# Check for TODO/FIXME comments (warning only)
echo "üìù Checking for TODO/FIXME comments..."
TODO_COUNT=$(git diff origin/$BRANCH..HEAD --name-only | xargs grep -E "TODO|FIXME" 2>/dev/null | wc -l)
if [ "$TODO_COUNT" -gt 0 ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Found $TODO_COUNT TODO/FIXME comments${NC}"
    echo "Consider addressing these before pushing:"
    git diff origin/$BRANCH..HEAD --name-only | xargs grep -E "TODO|FIXME" 2>/dev/null | head -5
fi

# Check commit messages for conventional commits format
echo "üìã Checking commit messages..."
COMMITS=$(git log origin/$BRANCH..HEAD --pretty=format:"%s")
INVALID_COMMITS=0

while IFS= read -r commit; do
    if ! echo "$commit" | grep -qE "^(feat|fix|docs|style|refactor|test|chore|build|ci|perf|revert)(\(.+\))?: .+"; then
        if ! echo "$commit" | grep -qE "^(Merge|Initial|Revert)"; then
            echo -e "${YELLOW}‚ö†Ô∏è  Non-conventional commit: $commit${NC}"
            INVALID_COMMITS=$((INVALID_COMMITS + 1))
        fi
    fi
done <<< "$COMMITS"

if [ "$INVALID_COMMITS" -gt 0 ]; then
    echo -e "${YELLOW}Consider using conventional commit format: type(scope): description${NC}"
fi

# Check for uncommitted changes
if ! git diff-index --quiet HEAD --; then
    echo -e "${YELLOW}‚ö†Ô∏è  You have uncommitted changes${NC}"
    echo "Consider committing or stashing them before pushing"
fi

# Special checks for main/master branch
if [[ "$BRANCH" == "main" || "$BRANCH" == "master" ]]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Pushing directly to $BRANCH branch${NC}"
    echo "Consider creating a PR instead"
    read -p "Are you sure you want to push directly to $BRANCH? (y/N): " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo -e "${RED}Push cancelled${NC}"
        exit 1
    fi
fi

echo -e "${GREEN}‚úÖ All pre-push checks passed!${NC}"
exit 0