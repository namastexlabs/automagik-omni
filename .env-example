# RabbitMQ Connection Settings
RABBITMQ_URI=amqp://username:password@host:5672
RABBITMQ_EXCHANGE=evolution_exchange

# WhatsApp Instance
WHATSAPP_INSTANCE=instance-name

# Session ID Prefix (used to identify sessions)
SESSION_ID_PREFIX=prefix-

# Logging Configuration
LOG_LEVEL=INFO                # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_VERBOSITY=short           # Options: short, full - Controls path display in logs

# Agent API Configuration
AGENT_API_URL=http://localhost:8881
AGENT_API_KEY=your-agent-api-key
DEFAULT_AGENT_NAME=simple_agent
AGENT_API_TIMEOUT=60

# Evolution API Configuration  
EVOLUTION_MESSAGES_DB=postgresql://username:password@host:5432/database_name
EVOLUTION_TRANSCRIPT_API=http://your-transcript-api-url
EVOLUTION_TRANSCRIPT_API_KEY=your-transcript-api-key

# Media Storage Configuration
EVOLUTION_MINIO_URL=minio:9000

# Other Settings
API_USE_HTTPS=false           # Whether to use HTTPS for API connections
TYPING_INDICATOR_DURATION=10  # Duration in seconds to show typing indicator
