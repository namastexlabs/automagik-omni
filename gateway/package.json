{
  "name": "@automagik/gateway",
  "version": "0.5.2",
  "description": "TypeScript gateway for Automagik Omni - single port access to all services",
  "type": "module",
  "main": "./src/index.ts",
  "bin": {
    "gateway": "./bin/gateway-wrapper.cjs"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.4",
    "@fastify/websocket": "^10.0.1",
    "bun": "^1.1.0",
    "fastify": "^4.28.0",
    "pgserve": "^1.1.2"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/node": "^22.10.0",
    "pino-pretty": "^13.1.2",
    "typescript": "^5.6.3"
  }
}
